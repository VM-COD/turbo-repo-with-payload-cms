{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "payload/generated-types": [
        "./src/payload-types.ts"
      ],
      "node_modules/*": [
        "./node_modules/*",
      ],
      "@repo/ui/*": ["./../../packages/ui/dist/*"]
    },
  },
  "include": [
    "src",
    // "**/*.ts",
    // "**/*.tsx",
    // "./../../node_modules/@repo/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "ts-node": {
    "transpileOnly": true,
    "swc": true
  }
}


